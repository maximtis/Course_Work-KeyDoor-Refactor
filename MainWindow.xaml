                    </TransformGroup>
                </Grid.RenderTransform>
                <Button x:Name="button1" Content="1" HorizontalAlignment="Left" Margin="36,126,0,0" VerticalAlignment="Top" Width="74" Background="#FF36BFFF" Height="35"/>
                <Button x:Name="button2" Content="2" HorizontalAlignment="Left" Margin="114,126,0,0" VerticalAlignment="Top" Width="75" Background="#FF36BFFF" Height="35"/>
                <Button x:Name="button3" Content="3" HorizontalAlignment="Left" Margin="194,126,0,0" VerticalAlignment="Top" Width="74" Background="#FF36BFFF" Height="35"/>
                <Button x:Name="button4" Content="4" HorizontalAlignment="Left" Margin="36,161,0,0" VerticalAlignment="Top" Width="74" Background="#FF36BFFF" Height="35"/>
                <Button x:Name="button5" Content="5" HorizontalAlignment="Left" Margin="114,161,0,0" VerticalAlignment="Top" Width="75" Background="#FF36BFFF" Height="35"/>
                <Button x:Name="button6" Content="6" HorizontalAlignment="Left" Margin="194,161,0,0" VerticalAlignment="Top" Width="74" Background="#FF36BFFF" Height="35"/>
                <Button x:Name="button7" Content="7" HorizontalAlignment="Left" Margin="36,196,0,0" VerticalAlignment="Top" Width="74" Background="#FF36BFFF" Height="35"/>
                <Button x:Name="button8" Content="8" HorizontalAlignment="Left" Margin="114,196,0,0" VerticalAlignment="Top" Width="75" Background="#FF36BFFF" Height="35"/>
                <Button x:Name="button9" Content="9" HorizontalAlignment="Left" Margin="194,196,0,0" VerticalAlignment="Top" Width="74" Background="#FF36BFFF" Height="35"/>
                <Button x:Name="buttonControl" Content="Control" HorizontalAlignment="Left" Margin="36,231,0,0" VerticalAlignment="Top" Width="74" Background="#FF36BFFF" Height="35"/>
                <Button x:Name="button0" Content="0" HorizontalAlignment="Left" Margin="114,231,0,0" VerticalAlignment="Top" Width="75" Background="#FF36BFFF" Height="35"/>
                <Button x:Name="buttonCall" Content="Call" HorizontalAlignment="Left" Margin="194,231,0,0" VerticalAlignment="Top" Width="74" Background="#FF36BFFF" Height="35"/>
                <TextBox x:Name="InfoPanel" HorizontalAlignment="Left" Height="87" Margin="36,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="232" FontSize="32" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="Black"/>
            </Grid>
        </Border>
    </Grid>
</Window>
